<%= link_to "ソースレビュー", root_path, :class => 'brand' %>
<ul class="nav">
  <% if user_signed_in? %>
		<div class="btn-group">
			<a class="btn btn-info"><%=image_tag "#{current_user.image}", :width => '15', :height => '15' %><%= current_user.name %></a>
			<a class="btn btn-info dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
			<ul class="dropdown-menu">
				<li><%= link_to "設定", edit_user_path(current_user) %></li>
				<li><%= link_to "ログアウト", signout_path %></li>
			</ul>
		</div>
  <% else %>
		<%= link_to signin_path, :class => "btn btn-primary" do%>
			<span class=""><i class="icon-user"></i>Login</span>
		<% end %>
  <% end %>
</ul>
